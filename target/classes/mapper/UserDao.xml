<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sy.dao.UserDao">
	<!-- 目的：为DAO接口方法提供sql语句配置 -->
	<!-- 查询用户和密码进行登录 -->
	<select id="findByUsername" resultType="com.sy.entity.User">
	
		select * from user where username = #{username}
			
	</select>
	
	<select id="findAllWork" resultType="com.sy.entity.Work">
	
		select * from work
			
	</select>
	
	<select id="addWork" resultType="com.sy.entity.Work">
	
		insert into work (workname,workcontent) values (#{workname},#{workcontent})  
			
	</select>
	
